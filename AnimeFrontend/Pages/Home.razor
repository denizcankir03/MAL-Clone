@page "/"
@using AnimeFrontend.Services
@using AnimeShared
@inject ClientAnimeService AnimeService

<PageTitle>MyAnimeList Clone</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Anime & Manga World</h1>
        <p class="lead">Everything About Anime&Manga</p>

        <div class="input-group mb-3 w-50 mx-auto">
            <input @bind="searchText" @bind:event="oninput" @onkeypress="HandleKeyPress"
                   type="text" class="form-control" placeholder="Search Anime & Manga...">
            <button class="btn btn-primary" @onclick="Search">Search</button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (animeList != null && animeList.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var anime in animeList)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@anime.Images.Jpg.LargeImageUrl" class="card-img-top" alt="@anime.Title" style="height: 300px; object-fit: cover;">

                        <div class="card-body">
                            <h5 class="card-title text-truncate">@anime.Title</h5>
                            <p class="card-text small text-muted">
                                @(anime.Studios?.FirstOrDefault()?.Name ?? "Bilinmiyor")
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-warning text-dark">⭐ @(anime.Score?.ToString() ?? "N/A")</span>
                                <span class="badge bg-secondary">@anime.Type</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private string searchText = "";
    private List<AnimeDTO> animeList = new();
    private bool isLoading = false;

    private async Task Search()
    {
        if (string.IsNullOrWhiteSpace(searchText)) return;

        isLoading = true;
        try
        {
            // Servisi çağırıp verileri çekiyoruz
            animeList = await AnimeService.SearchAnime(searchText);
        }
        catch (Exception ex)
        {
            Console.WriteLine("Hata: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await Search();
        }
    }
}